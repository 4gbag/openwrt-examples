#!/bin/sh /etc/rc.common

START=95

LIST_SEP="
"
MYAPP_COMMAND=/usr/bin/myapp1


section_enabled() {
	config_get_bool enabled "$1" 'enabled' 0
	[ $enabled -gt 0 ]
}

start_instance() {
	local s="$1"
	local duration
	local enabled

	config_get_bool enabled "$1" 'enabled' 0
	config_get duration "$1" 'duration' 0

	[ $enabled -gt 0 ] || return 1

	eval service_start "'$MYAPP_COMMAND' $duration"
}

stop_instance() {
	local s="$1"
	service_stop "$MYAPP_COMMAND"
}

start() {
	config_load 'myapp1'
	config_foreach start_instance 'myapp1'
}

stop() {
	config_load 'myapp1'
	config_foreach stop_instance 'myapp1'
}
